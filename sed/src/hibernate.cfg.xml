<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="sed">
  <property name="show_sql">true</property>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">topoAngel</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="connection.url">jdbc:postgresql://localhost:5432/sed</property>
  <property name="connection.pool_size">1</property>
  <property name="current_session_context_class">thread</property>
  <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
  <property name="hbm2ddl.auto">update</property>
  <mapping class="co.edu.udistrital.sed.model.Course"/>
  <mapping class="co.edu.udistrital.sed.model.Grade"/>
  <mapping class="co.edu.udistrital.sed.model.KnowledgeArea"/>
  <mapping class="co.edu.udistrital.sed.model.Qualification"/>
  <mapping class="co.edu.udistrital.sed.model.Student"/>
  <mapping class="co.edu.udistrital.sed.model.Subject"/>
  <mapping class="co.edu.udistrital.sed.model.Period"/>
  <mapping class="co.edu.udistrital.sed.model.IdentificationType"/>
  <mapping class="co.edu.udistrital.sed.model.QualificationType"/>
  <mapping class="co.edu.udistrital.sed.model.School"/>
  <mapping class="co.edu.udistrital.sed.model.StudentCourse"/>
  <mapping class="co.edu.udistrital.sed.model.WorkDay"/>
  <mapping class="co.edu.udistrital.sed.model.Assignment"/>
  <mapping class="co.edu.udistrital.core.login.model.SedRole"/>
  <mapping class="co.edu.udistrital.core.login.model.SedRoleUser"/>
  <mapping class="co.edu.udistrital.core.login.model.SedUser"/>
  <mapping class="co.edu.udistrital.core.login.model.SedUserLogin"/>
  <mapping class="co.edu.udistrital.core.login.model.Tree"/>
  <mapping class="co.edu.udistrital.core.login.model.TreeSedRole"/>
  <mapping class="co.edu.udistrital.core.common.model.EmailTemplate"/>
 </session-factory>
</hibernate-configuration>
